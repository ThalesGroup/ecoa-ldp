  SARC_serial_check_serialize (&sarc_serial_ctxt, "<parameter.name>");
}>
          if (sarc_serial_ctxt.error != SARC_FALSE)
            {
              rc = ECOA__return_status_INVALID_PARAMETER;
            \}  
          else
            {
              /* Actually send response */
