      <if (componentType.isExternal)>
      pthread_mutex_unlock(&context-\>platform_hook-\><data.name>_mutex);
      <endif>
      break;}>
    <othercases(unlinkedInstances,"ECOA__return_status_RESOURCE_NOT_AVAILABLE")>
  \}

