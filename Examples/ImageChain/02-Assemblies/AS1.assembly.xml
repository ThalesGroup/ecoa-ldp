<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://www.ecoa.technology/Assembly/3.0">
    <instance name="ImageSampler" componentType="ImageSampler" implementation="C"/>
    <instance name="Detector" componentType="Detector" implementation="C"/>
    <instance name="HMI" componentType="HMI" implementation="C"/>
    <instance name="Ticker" componentType="Ticker" implementation="C"/>

    <links>
        <!-- Images -->
        <eventLink>
            <sender operation="image_out" instance="ImageSampler"/>
            <receiver operation="image_in" instance="Detector"/>
        </eventLink>
        <eventLink>
            <sender operation="image_out" instance="Detector"/>
            <receiver operation="image_in" instance="HMI"/>
        </eventLink>

        <!-- Periodic activation with a 'tick' -->
        <eventLink>
            <sender operation="tick" instance="Ticker"/>
            <receiver operation="tick" instance="ImageSampler"/>
        </eventLink>

    </links>
</assembly>
